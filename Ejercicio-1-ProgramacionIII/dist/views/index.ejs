<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - <%= appName %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="logo">
                <i class="fas fa-paw"></i>
                <h1>
                    <%= appName %>
                </h1>
            </div>
            <nav class="nav">
                <a href="/" class="nav-link active"><i class="fas fa-home"></i> Inicio</a>
                <a href="/acerca-de" class="nav-link"><i class="fas fa-info-circle"></i> Acerca de</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h2>¿Cuál es tu animal favorito?</h2>

                <!-- Formulario de búsqueda -->
                <form action="/buscar-animal" method="POST" class="search-form">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" name="nombreAnimal" placeholder="Animal Favorito" required
                                class="form-control" autocomplete="off">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-search"></i> Buscar Animal
                    </button>
                </form>
            </div>
        </div>
    </section>


    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4><i class="fas fa-paw"></i>
                        <%= appName %>
                    </h4>
                    <p>Ejercicio 1 de Programación III</p>
                    <p>Universidad Experimental de Telecomunicaciones e Informatica</p>
                </div>
                <div class="footer-section">
                    <h4>Tecnologías</h4>
                    <ul>
                        <li><i class="fab fa-node-js"></i> Node.js</li>
                        <li><i class="fas fa-code"></i> TypeScript</li>
                        <li><i class="fas fa-server"></i> Express</li>
                        <li><i class="fas fa-file-code"></i> EJS</li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Desarrolladores</h4>
                    <p>Juan Luis Echenique Gonzalez</p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        /**
         * Rellena el buscador con una categoría predefinida
         * @param {string} categoria - El nombre de la categoría a buscar
         */
        function setCategory(categoria) {
            document.querySelector('input[name="nombreAnimal"]').value = categoria;
            document.querySelector('.search-form').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>

</html>